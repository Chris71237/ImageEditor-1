<Window x:Class="ImageEditor.ImageProcessing.BrightnessContrastSettings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Brightness/Contrast" Height="151" Width="357">
    
    <Grid>
        <Label Content="Brightness" Height="28" HorizontalAlignment="Left" Margin="12,7,0,0" VerticalAlignment="Top" />
        <Label Content="Contrast" Height="28" HorizontalAlignment="Left" Margin="12,41,0,0" VerticalAlignment="Top" />
        <Slider Value="{Binding Brightness}" Minimum="-1" Maximum="1" Height="23" Margin="79,7,12,0" Name="brightnessValue" VerticalAlignment="Top" />
        <Slider Value="{Binding Contrast}" Minimum="0" Maximum="2" Height="23" Margin="79,41,12,0" Name="contrastValue" VerticalAlignment="Top" />
        <Button Content="Ok" Margin="0,0,93,12" Name="okButton" Height="23" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75" Click="okButton_Click" />
        <Button Content="Cancel" Margin="0,0,12,12" Name="cancelButton" Height="23" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75" IsCancel="True" />
    </Grid>
</Window>
