<Window x:Class="ImageEditor.ImageProcessing.RotationSettings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Rotation" Height="188" Width="268" WindowStyle="ToolWindow">
    <Grid>
        <RadioButton Content="No Rotation" Height="16" HorizontalAlignment="Left" Margin="13,20,0,0" Name="noRotation" VerticalAlignment="Top" IsChecked="True" />
        <RadioButton Content="Rotate 90° counterclockwise" Height="16" HorizontalAlignment="Left" Margin="12,64,0,0" Name="rotate90Left" VerticalAlignment="Top" />
        <RadioButton Content="Rotate 90° clockwise" Height="16" HorizontalAlignment="Left" Margin="12,42,0,0" Name="rotate90Right" VerticalAlignment="Top" />
        <RadioButton Content="Rotate 180°" Height="16" HorizontalAlignment="Left" Margin="13,86,0,0" Name="rotate180" VerticalAlignment="Top" />
        <Button Content="Ok" Height="23" HorizontalAlignment="Right" Margin="0,0,91,12" Name="okButton" VerticalAlignment="Bottom" Width="75" Click="okButton_Click" />
        <Button Content="Cancel" Height="23" HorizontalAlignment="Right" IsCancel="True" Margin="0,0,12,12" Name="cancelButton" VerticalAlignment="Bottom" Width="75" />
    </Grid>
</Window>
