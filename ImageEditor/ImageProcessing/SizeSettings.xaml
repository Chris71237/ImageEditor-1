<Window x:Class="ImageEditor.ImageProcessing.SizeSettings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Size" Height="142" Width="307" WindowStyle="ToolWindow">    
    <Grid>
        <Label Content="Width" Height="28" HorizontalAlignment="Left" Margin="12,7,0,0" VerticalAlignment="Top" />
        <Label Content="Height" Height="28" HorizontalAlignment="Left" Margin="12,32,0,0" VerticalAlignment="Top" />

        <TextBox Text="{Binding X}" PreviewTextInput="editor_PreviewTextInput" Margin="56,9,12,0" VerticalAlignment="Top" />
        <TextBox Text="{Binding Y}" PreviewTextInput="editor_PreviewTextInput" Margin="56,34,12,0" VerticalAlignment="Top" />
        <Button Content="Ok" Height="23" HorizontalAlignment="Right" Margin="0,0,93,12" Name="okButton" VerticalAlignment="Bottom" Width="75" Click="okButton_Click" />
        <Button Content="Cancel" Height="23" HorizontalAlignment="Right" IsCancel="True" Margin="0,0,12,12" Name="cancelButton" VerticalAlignment="Bottom" Width="75" />
    </Grid>
</Window>
